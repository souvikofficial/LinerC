{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "db:migrate": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        },
        "test:unit": {
            "cache": false
        },
        "test:e2e": {
            "cache": false
        }
    }
}